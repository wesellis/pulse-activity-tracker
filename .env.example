# Environment variables for Pulse Activity Tracker
# Copy this to .env and customize for your setup

# Database Configuration
DATABASE_URL=sqlite:///pulse_data.db
# For production: postgresql://user:password@localhost/pulse_db

# Monitoring Settings
MONITORING_INTERVAL=30  # seconds between activity checks
WORK_HOURS_START=9      # 24-hour format
WORK_HOURS_END=17       # 24-hour format

# Privacy Settings
TRACK_BROWSER_HISTORY=true
TRACK_FILE_ACCESS=true
TRACK_KEYSTROKES=false  # For productivity analysis only
TRACK_WEBSITES=true

# AI Integration (Optional)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
USE_AI_SUGGESTIONS=false

# Reporting Settings
AUTO_GENERATE_REPORTS=true
REPORT_EMAIL=your.boss@company.com
SEND_DAILY_REPORTS=false

# Web Dashboard
WEB_PORT=8000
WEB_HOST=localhost
DEBUG_MODE=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=pulse.log
