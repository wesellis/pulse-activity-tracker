# Pulse Activity Tracker - Environment Configuration
# Copy this file to .env and customize your settings

# ===== DATABASE SETTINGS =====
DATABASE_URL=sqlite:///pulse_data.db
# For PostgreSQL: postgresql://user:password@localhost/pulse_db

# ===== MONITORING SETTINGS =====
MONITORING_INTERVAL=30
WORK_HOURS_START=9
WORK_HOURS_END=17

# ===== PRIVACY SETTINGS =====
TRACK_BROWSER_HISTORY=true
TRACK_FILE_ACCESS=true
TRACK_KEYSTROKES=false
TRACK_WEBSITES=true
PRIVACY_MODE=false

# ===== AI INTEGRATION =====
USE_AI_SUGGESTIONS=false
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# ===== PRODUCTIVITY THRESHOLDS =====
BREAK_REMINDER_INTERVAL=3600
IDLE_THRESHOLD_SECONDS=300
PRODUCTIVITY_THRESHOLD_LOW=30
PRODUCTIVITY_THRESHOLD_HIGH=80

# ===== REPORTING SETTINGS =====
AUTO_GENERATE_REPORTS=true
SEND_DAILY_REPORTS=false
REPORT_EMAIL=
WEEKLY_REPORT_DAY=5

# ===== WEB DASHBOARD =====
WEB_PORT=8000
WEB_HOST=localhost
DEBUG_MODE=true

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_FILE=pulse.log

# ===== NOTIFICATIONS =====
ENABLE_NOTIFICATIONS=true
BREAK_NOTIFICATIONS=true
PRODUCTIVITY_ALERTS=true

# ===== BACKUP SETTINGS =====
AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24
MAX_BACKUPS=7
BACKUP_TO_CLOUD=false

# ===== FOCUS MODES =====
POMODORO_WORK_MINUTES=25
POMODORO_BREAK_MINUTES=5
DEEP_WORK_MINUTES=90

# ===== HEALTH REMINDERS =====
HYDRATION_REMINDER_HOURS=2
EYE_REST_REMINDER_HOURS=1
POSTURE_CHECK_HOURS=2